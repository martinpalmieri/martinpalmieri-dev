---
import BaseLayout from '../layouts/BaseLayout.astro'
import { Image } from 'astro:assets'
import profilePic from '../assets/martin-palmieri-profile.jpeg'
---

<BaseLayout>
  <section class={`h-screen flex items-center justify-center`}>
    <div class="flex flex-col justify-center">
      <Image
        src={profilePic}
        class="rounded-lg w-48 h-48 relative top-10 left-12 z-50"
        alt="This is me: Martin Palmieri - 2018~ profile pic"
      />
      <div
        class="bg-slate-950 px-12 py-16 text-white mb-12 rounded-sm rounded-br-[32px]"
      >
        <h1 class="font-title text-2xl mb-1">Hello there.</h1>
        <h3 class="text-xl">I'm Mart&iacute;n.</h3>
        <p class="text-xl">I'm a Senior Software Engineer.</p>
        <p class="text-xl">
          Wanna check <a class="font-bold hover:underline" href="/cv">my cv</a>?
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
