---
import { ViewTransitions } from "astro:transitions";

interface BaseLayoutProps {
  title?: string;
  description?: string;
}

const {
  title = "Martín Palmieri | Frontend/Software Developer",
  description = "Martín Palmieri Frontend/Software Developer."
} = Astro.props as BaseLayoutProps;

const canonicalUrl = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.href;
---

<html lang="en" transition:animate="slide">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Martín Palmieri" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bevan&family=Caprasimo&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <slot name="head" />
    <ViewTransitions />
  </head>
  <body class="max-h-screen overflow-hidden">
    <slot />
  </body>
</html>
